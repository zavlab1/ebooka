<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="20dip"
        android:paddingRight="5dip" >

        <ImageView
            android:id="@+id/imageMenuArrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#80000000"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:src="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Book Name.pdf"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/currentPageIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0"
            android:text="12 / 245"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0"
            android:text="10:10"
            android:textColor="#000000" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#80000000" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.ebooka.DocumentView
            android:id="@+id/documentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:padding="3dip" >

            <LinearLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <ImageView
                    android:id="@+id/moveLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/imageView3"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:src="@drawable/left" />

                <ImageView
                    android:id="@+id/moveDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/align" />

                <ImageView
                    android:id="@+id/moveRight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/zoomMinus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@android:drawable/btn_minus" />

                    <ImageView
                        android:id="@+id/zoomPlus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dip"
                        android:layout_weight="1"
                        android:src="@android:drawable/btn_plus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/prefDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#99ffffff"
                    android:padding="3dip"
                    android:src="@android:drawable/ic_menu_more" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prevPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="#60000000"
            android:orientation="vertical"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prev"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/prevPage"
            android:layout_marginRight="15dp"
            android:background="#60000000"
            android:orientation="vertical"
            android:padding="10dip" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pagsLayout"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="#60000000"
            android:layout_margin="20dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <TextView
                android:id="@+id/currentSeek"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="50dip"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="1" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#20000000"
                android:progressDrawable="@drawable/doc" />
            
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/maxSeek"
                android:layout_width="50dip"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="121" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>